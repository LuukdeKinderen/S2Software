

@model List<Skippy.Logic.Order>
@if (Model.Count > 0)
{
    <table data-link="row" class="table table-sm">
        <tr>
            <th>Order Id</th>
            <th>Datum</th>
            <th>Klant</th>
            <th>Betaalstatus</th>
            <th class="text-right">Totaalprijs</th>
        </tr>
        @foreach (Skippy.Logic.Order order in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Order" asp-action="Order" asp-route-id=@order.id>
                        #@order.id
                    </a>
                </td>
                <td>@order.date</td>
                @{Skippy.Logic.Klant klant = order.GetKlant();}
                @if (klant != null)
                {
                    <td>
                        <a asp-controller="Klant" asp-action="Klant" asp-route-id=@klant.id>
                            @klant.naam
                        </a>
                    </td>
                }
                else
                {
                    <td></td>
                }
                @if (order.betaald)
                {
                    <td>Voldaan</td>
                }
                else
                {
                    <td>Nog te betalen</td>
                }
                <td class="text-right">@order.TotaalPrijs()</td>

            </tr>

        }

    </table>
}
else
{
    <p>Nog geen orders</p>
}