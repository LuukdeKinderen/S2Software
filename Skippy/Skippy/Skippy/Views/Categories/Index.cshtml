@model List<CategorieViewModel>

@{
    ViewData["Title"] = "Categoriën";
}
@addTagHelper *, Skippy
<div class="row">
    <div class="col-8">
        <h1>Categorieën</h1>
        <div class="container">
            <div class="row">
                @foreach (CategorieViewModel categorie in Model)
                {
                    <div class=" col-sm-6 col-md-4 ">
                        <a asp-action="Categorie"
                           asp-route-id=@categorie.id>


                            <h3 class="rounded bg-white shadow-sm p-4 text-center">@categorie.titel</h3>


                        </a>
                    </div>
                }
            </div>
        </div>


    </div>
    <div class="col-4">
        <vc:order />
    </div>
</div>
