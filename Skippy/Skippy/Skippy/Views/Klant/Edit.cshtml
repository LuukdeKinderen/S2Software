@model KlantViewModel

@{
    ViewData["Title"] = "Wijzig";
}

    <h1>Wijzigen</h1>

<h4>Klant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="naam" class="control-label"></label>
                <input asp-for="naam" class="form-control" />
                <span asp-validation-for="naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="factuurAdres" class="control-label"></label>
                <input asp-for="factuurAdres" class="form-control" />
                <span asp-validation-for="factuurAdres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bezorgAdres" class="control-label"></label>
                <input asp-for="bezorgAdres" class="form-control" />
                <span asp-validation-for="bezorgAdres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="Edit" type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

