@model Skippy.Logic.Klant

@{
    ViewData["Title"] = Model.naam;
}

@addTagHelper *, Skippy
<div class="row">
    <div class="col-8">
        <h1>@Model.naam</h1>
        <p>Orders van @Model.naam</p>

        <div class="rounded bg-white shadow-sm">
            @Html.Partial("_OrderLijst", Model.GetOrders())
        </div>
        <form asp-controller="Order" asp-action="AddKlant" asp-route-klantId=@Model.id>

            <div class="form-group">
                <input type="submit" value="Toevoegen aan Order" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Edit" asp-route-id=@Model.id>Wijzigen</a><br />
        </div>
    </div>

    <div class="col-4">
        <vc:order />
    </div>
</div>



